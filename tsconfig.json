{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "components/*": ["src/components/*"],
      "core/*": ["src/core/*"],
      "translation/*": ["src/translation/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
